{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "checkJs": true,
        "moduleResolution": "node",
        "baseUrl": "./src/Mandadin.Client",
        "paths": {
            "/*": [
                "wwwroot/*"
            ]
        }
    },
    "include": [
        "./Mandadin/wwwroot/js"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "@types/pouchdb"
        ]
    }
}